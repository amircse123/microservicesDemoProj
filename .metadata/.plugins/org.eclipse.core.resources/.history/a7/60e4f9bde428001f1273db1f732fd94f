package com.quiz.service;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.quiz.entities.Quiz;
import com.quiz.repository.QuizRepo;


@Service
public class QuizServiceImpl implements QuizService{
	
	private QuizRepo repo;
	
	private QuestionClient questionClient;

	
	public QuizServiceImpl(QuizRepo repo, QuestionClient questionClient) {
		super();
		this.repo = repo;
		this.questionClient = questionClient;
	}

	@Override
	public Quiz add(Quiz quiz) {
		
		return repo.save(quiz);
	}

	@Override
	public List<Quiz> get() {

		 List<Quiz> quizzes = repo.findAll();
		 quizzes.stream().map(quiz->{
			 quiz.setQuestions(questionClient.getQuestionsOfQuiz(quiz.getQuizId()));
			 return quiz;
		 }).collect(Collectors.toList());
	}

	
	@Override
	public Quiz get(Long id) {
		Quiz quiz = repo.findById(id).orElseThrow(()->new RuntimeException("quiz not found"));
		
		return quiz;
	}
	
	@Override
	public Quiz updateQuiz(Quiz q, Long id) {
		Quiz quiz = repo.findById(id).orElseThrow(()->new RuntimeException("quiz not found"));
		quiz.setTitle(q.getTitle());
		Quiz saved = repo.save(quiz);
		return saved;
	}

}
